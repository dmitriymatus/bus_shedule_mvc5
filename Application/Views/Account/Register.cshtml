@model Application.Models.Account.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}

<h4>Создайте новую учетную запись.</h4>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Имя пользователя" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.PasswordConfirm, new { @class = "form-control", placeholder = "Повторите пароль" })
    </div>
    <input type="submit" value="Регистрация" class="btn btn-lg btn-primary btn-block" style="padding:5px;" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
