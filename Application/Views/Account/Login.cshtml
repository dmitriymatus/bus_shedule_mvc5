@using Application.Models.Account
@model LoginModel
@{
    ViewBag.Title = "Выполнить вход";
}

<div class="row">
    <div class="col-md-7">
        <h4>Используйте локальную учетную запись для входа.</h4>
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Имя пользователя" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль" })
            </div>
            <input type="submit" value="Войти" class="btn btn-lg btn-primary btn-block" style="padding:5px;" />
            <hr />
            @Html.ActionLink("Регистрация", "Register", null, new { @class = "btn btn-lg btn-default btn-block", style = "padding:5px;" })
        }
    </div>
    <div class="col-md-5">

    </div>
        @Html.Partial("_ExternalLoginsListPartial")
    </div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/bootstrap.js")
}
