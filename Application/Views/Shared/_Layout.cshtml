<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/jumbotron-narrow.css")
    @Styles.Render("~/Content/Site.css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="headerContainer">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <a class="navbar-brand" href="~/Home/Index">Расписание автобусов</a>
                        <button type="button" class="navbar-toggle navbar-left collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        @Html.Partial("_LoginPartial")
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>

            @Html.Action("Index","Cities")
            @*<blockquote>
                <h4 class="text-muted">
                <select id="city">
                    <option>Брест</option>
                    <option>Витебск</option>
                    <option>Гродно</option>
                    <option>Гомель</option>
                    <option>Минск</option>

                </select>
                </h4>
            </blockquote>*@
        </div>
        <div class="jumbotron">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p class="text-muted">Брест 2015</p>
        </footer>
    </div> <!-- /container -->
    <img id="loadImg" src="~/Content/load.gif" />
    <div id="loadBackground"></div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Scripts/Cities/CitiesIndex.js")
</body>
</html>
