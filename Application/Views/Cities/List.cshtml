@model IEnumerable<string>
@{
    ViewBag.Title = "List";
}


<p class="bg-success">@TempData["Success"]</p>
<p class="bg-danger">@TempData["Errors"]</p>

<blockquote>
    <div class="row">
        <h3 id="News" class="Title text-left col-lg-9">Города</h3>
        <h5 class="NavigateLink text-right col-lg-3"><a href=@Url.Action("Add","Cities")><span class="glyphicon glyphicon-plus"></span> Добавить</a></h5>
    </div>
    @if (Model.Count() == 0 || Model == null)
    {
        <h4>Список городов пуст. @Html.ActionLink("Добавить город", "Add")</h4>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                    @Html.ActionLink(item,"Edit","Cities",new {City = item},new {@class= "text-info list-group-item" })                  
            }
        </div>
    }
</blockquote>